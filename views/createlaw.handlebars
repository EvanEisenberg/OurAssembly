<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"></script>

<article>
    <h1>Upload a Law:</h1>
    <form method="POST" action="/addLaw">
      <div class="input-field">
        <label>Law Name:</label>
        <input type="text" name="name" size="50" placeholder="Title">
      </div>
      <div class="input-field">
        <label>Law Text:</label>
        <input type="text" name="text" size="50" placeholder="Law text">
      </div>
      <div class="input-field">
        <label>Authors:</label>
        <input type="text" name="authors" size="50" placeholder="John Adams, George Washington (comma separated)">
      </div>
      <div class="input-field">
        <label>Date Passed:</label>
        <input type="date" name="date_passed" size="50" placeholder="05/08/2019">
      </div>
      <div class="input-field">
        <label>Committee:</label>
        <input type="text" name="committee" size="50" placeholder="Interior">
      </div>
      <button type="submit">Create Law</button>
    </form>
  </article>