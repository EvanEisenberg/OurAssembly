<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"></script>

<article>
    <h1>Upload a Bill:</h1>
    <form method="POST" action="/addBill">
      <div class="input-field">
        <label>Bill Text:</label>
        <input type="text" name="text" size="50" placeholder="Bill text">
      </div>
      <div class="input-field">
        <label>Authors:</label>
        <input type="text" name="authors" size="50" placeholder="John Adams, George Washington (comma separated)">
      </div>
      <div class="input-field">
        <label>Date Introduced:</label>
        <input type="date" name="date_introduced" size="50" placeholder="05/08/2019">
      </div>
      <div class="input-field">
        <label>Committee:</label>
        <input type="text" name="committee" size="50" placeholder="Interior">
      </div>
      <div class="input-field">
        <label>Bill ID:</label>
        <input type="number" name="bill_id" size="50" placeholder="12345">
      </div>
      <button type="submit">Create Bill</button>
    </form>
  </article>